<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_gravity="center_vertical"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextAmount"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@id/add_button"
        android:background="@drawable/rounded_outline"
        android:ems="10"
        android:gravity="center"
        android:hint=""
        android:inputType="number"
        android:paddingLeft="5pt"
        android:textColor="#FF323232"
        android:textColorHint="#FFb7b7b7"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_number"
        android:layout_marginLeft="5sp"
        android:textSize="18dp"
        android:textColor="#ff888888"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NN" />

    <TextView
        android:id="@+id/txt_name"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_toRightOf="@id/txt_number"
        android:text="TTTTTTTTTTTTTTTTTTT" />

    <Button
        android:id="@+id/remove_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="70dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="57dp"
        android:layout_toStartOf="@+id/add_button"
        android:layout_toRightOf="@id/editTextAmount"
        android:background="#00000000"
        android:drawableLeft="@drawable/baseline_remove_24"
        android:gravity="center"
        android:paddingLeft="0dp"
        android:text="" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="90sp"

        android:layout_toLeftOf="@id/txt_name"
        android:background="#00000000"

        android:drawableLeft="@drawable/baseline_add_24"
        android:gravity="center"
        android:paddingLeft="0dp"
        android:text="" />
</RelativeLayout>